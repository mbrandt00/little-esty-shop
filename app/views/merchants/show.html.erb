<%= render 'partials/merchant_navbar'%>

<br>
<div class="container">
  <div class="row header">
    <div class="col-lg-12 text-center">
      <h1><%=@merchant.name%>'s Dashboard</h1>
    </div>
  </div>
    <div class="row">
        <div class="col">
            <section id="ready_to_ship">
                <h3 class="text-center">Items Ready to Ship</h3>
                <p class="text-center"></p>
                <p><% @merchant.items_ready_to_ship.each do |item| %>
                    <p><%= item.name %> - Invoice
                        #<%= link_to "#{item.invoice_ids}", "/merchants/#{@merchant.id}/invoices/#{item.invoice_ids[0]}" %>
                        <%= item.created_at.strftime("%A, %B %-d, %Y") %></p>
                    <% end %>
                </p>
            </section>
        </div>
        <div class="col">
            <section id="favorite_customers">
                <h3 class="text-center">Favorite Customers</h3>
                <ol>
                    <% @merchant.favorite_customers.each do |customer| %>
                    <li> <%= "#{customer.first_name} #{customer.last_name} - #{customer.top_result} purchases" %> </li>
                    <% end %>
                </ol>
            </section>
        </div>
    </div>
</div>

<%= link_to("View Bulk Discounts", "/merchants/#{@merchant.id}/bulk_discounts") %>