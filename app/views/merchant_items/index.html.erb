<h1> <%=@merchant.name%>'s Items </h1>
<div class = enabled>
<h3> Enabled Items </h3>
<% @merchant.items.enabled.each do |item| %>

      <ul>
        <li>
          <a href="/merchants/<%=@merchant.id%>/items/<%=item.id%>">
            <%= item.name%>
          </a>
          <%= button_to("Disable", "/merchants/#{item.merchant.id}/items/#{item.id}/", method: :patch, name: "status",value: "disable") %>
        </li>
      </ul>
<% end %>
</div>

<div class = disabled>
<h3> Disabled Items </h3>
<% @merchant.items.disabled.each do |item| %>

      <ul>
        <li>
          <a href="/merchants/<%=@merchant.id%>/items/<%=item.id%>">
            <%= item.name%>
          </a>
          <%=button_to("Enable", "/merchants/#{item.merchant.id}/items/#{item.id}/", method: :patch, name: "status",value: "enable")%>
        </li>
      </ul>
<% end %>
</div>

<div class = most_popular>
<h3>Most Popular Items</h3>
<% @most_popular_items.each do |item| %>
  <div id= item-<%=item.id%>> 
      <ul>
        <li>
          <a href="/merchants/<%=@merchant.id%>/items/<%=item.id%>">
            <%= item.name%> </a> Total Revenue: <%= number_to_currency(item.revenue)%>
          
        </li>
        <li>Top Selling Date for <%= item.name %> was <%= date_formatter(item.best_day.first.created_at)%> with <%= item.best_day.first.count %> sales.</li>
      </ul>
  </div>
<% end %>
</div>
<div class = create>
<%= link_to("Create Item", "/merchants/#{@merchant.id}/items/new" ) %>
</div> 

